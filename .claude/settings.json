{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Ping.aiff vol 0.4"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Pop.aiff vol 0.3"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Glass.aiff vol 0.5"
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Purr.aiff vol 0.4"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Tink.aiff vol 0.3"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Bottle.aiff vol 0.4"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Hero.aiff vol 0.5"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Submarine.aiff vol 0.4"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Frog.aiff vol 0.5"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "play /System/Library/Sounds/Morse.aiff vol 0.3"
          }
        ]
      }
    ]
  }
}
